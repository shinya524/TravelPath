<!DOCTYPE html>
<html>
  <head>
    <title>TravelPath</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class ="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class ="container">
          <a class ="navbar-brand" href ="/">
            TravelPath
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class ="collapse navbar-collapse" id ="navbarNavDropdown">
            <ul class ="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "/about", class: "nav-link text-light" do %>
                  About
                  <% end %>
                </li>
                <li>
                  <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
                  マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to spots_path, class: "nav-link text-light" do %>
                  スポット一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_post_spot_path, class: "nav-link text-light" do %>
                  投稿
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                  ログアウト
                  <% end %>
                </li>

              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to spots_path, class: "nav-link text-light" do %>
                  スポット一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to user_path, class: "nav-link text-light" do %>
                  ユーザー一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do %>
                  ログアウト
                  <% end %>
                </li>

              <% else %>

                <li>
                  <%= link_to "/about", class: "nav-link text-light" do %>
                  About
                  <% end %>
                </li>
                <li>
                  <%= link_to spots_path, class: "nav-link text-light" do %>
                  スポット一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                  ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class ="fixed-bottom">
      <div class ="container mt-5">
        <div class ="row">
          <div class ="mx-auto">
            <p>travelpath</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

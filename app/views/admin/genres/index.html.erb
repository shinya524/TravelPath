<div>
<%= form_with model: @genre, url: admin_genres_path do |f| %>

<h4>ジャンル名</h4>
<%= f.text_field :name %>
<%= f.submit "新規登録" %>

<% end %>
</div>

<table>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td>
        <%= link_to admin_genre_path(genre.id), method: :delete do %>
          削除する
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
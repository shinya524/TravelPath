<div>
      <div>
        <h4>画像</h4>
        <%= image_tag @post_spot.get_spot_image(300,300) %>
      </div>
      <div>
        <h4>スポット名</h4>
        <%= @post_spot.name %>

        <h4>郵便番号</h4>
        <%= @post_spot.postcode %>

        <h4>都道府県</h4>
        <%= @post_spot.prefecture.name %>

        <h4>住所</h4>
        <%= @post_spot.address %>

        <h4>ジャンル</h4>
        <%= @post_spot.genre.name %>

        <h4>紹介文</h4>
        <%= @post_spot.introduction %>

        <h4>一言コメント</h4>
        <%= @post_spot.comment %><br>

        <div>
          <%= link_to edit_admin_post_spot_path(@post_spot.id) do %>
            編集
          <% end %>

          <%= link_to admin_post_spot_path(@post_spot.id), method: :delete do %>
            削除
          <% end %>
          </div>
      </div>
    </div>

    <div>
      <h4>コメント一覧</h4>
      <tbody>
        <% @post_comments.each do |comment| %>
        <tr>
          <td>
            <%= comment.comment %>
          </td>
          <td>
            <%= link_to "削除", admin_post_comment_path(comment.id), method: :delete %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </div>
  </div>


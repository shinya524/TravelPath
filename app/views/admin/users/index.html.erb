<div class ="container">
  <div class ="row">
    <div class ="col-11">
      <table class ="table">
        <thead class ="thead-light">
          <tr>
            <th>会員ID</th>
            <th>会員名</th>
            <th>メールアドレス</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>